<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
	<ui:style type="se.purplescout.purplemow.webapp.client.schedule.view.ScheduleView.Style">
		.box {
			border: 1px solid #d7d7d7;
			border-radius: 5px;
			padding: 20px;
		}
		
		.box h1 {
			margin: 0 0 10px 10px;
			color: #4B4B4B;
			font-size: 22px;
			line-height: 24px;
			font-weight: normal;
		}
		
		.box h2 {
			margin: 0 0 10px 10px;
			color: #4B4B4B;
			font-size: 16px;
			line-height: 20px;
			font-weight: normal;
		}
		
		table {
			border-collapse: collapse;
			border-spacing: 2px;
			margin: 0 auto;
			clear: both;
		}
		
		th {
			height: 30px;
		}
		
		tr {
			
		}
		
		td {
			height: 20px;
			border-top: 1px solid #E8E8E8;
			border-bottom: 1px solid #E8E8E8;
			border-left: 2px solid #E8E8E8;
			border-right: 2px solid #E8E8E8;
		}
		
		.first {
			width: 60px;
		}
		
		.day {
			width: 120px;
		}
		
		.mowEvent {
			background: #577233;
			border-top: none;
			border-bottom: none;
		}
		
		.mowEventTop {
			border-top: 1px solid #E8E8E8;
		}
		
		.mowEventBottom {
			border-bottom: 1px solid #E8E8E8;
		}
		
		.navButton {
			float: left;
		}
		
		.error {
			background-color: coral;
		}
		
		.cell {
			width: 50px;
		}
	</ui:style>
	<g:HTMLPanel>
		<h1>Schedule</h1>
		<g:HTMLPanel styleName="{style.box}" ui:field="panel">
			<g:FlexTable ui:field="table" />

			<g:FlowPanel>
				<g:Button ui:field="reset" text="Reset" enabled="false" />
				<g:Button ui:field="save" text="Save" enabled="false" />
			</g:FlowPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>
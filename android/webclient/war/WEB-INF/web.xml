<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>purplemow.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>HttpProxy</servlet-name>
		<servlet-class>se.purplescout.purplemow.webapp.test.servlet.ProxyServlet</servlet-class>
		<init-param>
			<param-name>remoteServer</param-name>
			<param-value>192.168.0.10</param-value>
		</init-param>
		<init-param>
			<param-name>remotePath</param-name>
			<param-value>/purplemow/rpc</param-value>
		</init-param>
		<init-param>
			<param-name>remotePort</param-name>
			<param-value>8080</param-value>
		</init-param>
	</servlet>

	<!-- Redirect rpc:s -->
	<servlet-mapping>
		<servlet-name>HttpProxy</servlet-name>
		<url-pattern>/purplemow/rpc/*</url-pattern>
	</servlet-mapping>
</web-app>
